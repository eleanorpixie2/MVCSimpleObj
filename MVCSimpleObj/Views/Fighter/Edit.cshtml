@model MVCSimpleObj.Models.IFighter

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>IFighter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class = "editor-field" >
            @Html.DropDownList("FighterType", new List<SelectListItem>
            {
                new SelectListItem
                {
                    Text = "Archer", Value = "Archer",Selected
                },
                new SelectListItem
                {
                    Text = "Female", Value = "Female"
                }
            }, "Select Fighter Type")
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

